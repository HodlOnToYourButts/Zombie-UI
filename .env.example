# Database Configuration
COUCHDB_HOST=localhost
COUCHDB_PORT=5984
COUCHDB_DB_NAME=zombie
COUCHDB_USER=admin
COUCHDB_PASSWORD=password

# Server Configuration
ADMIN_PORT=8080
NODE_ENV=development

# Session Security (REQUIRED - Generate a secure random string)
ZOMBIE_ADMIN_SESSION_SECRET=your-super-secret-session-key-change-this-in-production

# OIDC Provider Configuration (REQUIRED - Set these based on your OIDC provider)
OIDC_ISSUER=https://your-oidc-provider.com
OIDC_AUTHORIZATION_ENDPOINT=https://your-oidc-provider.com/auth
OIDC_TOKEN_ENDPOINT=https://your-oidc-provider.com/token
OIDC_USERINFO_ENDPOINT=https://your-oidc-provider.com/userinfo
OIDC_END_SESSION_ENDPOINT=https://your-oidc-provider.com/logout

# OIDC Client Configuration (REQUIRED)
ZOMBIE_ADMIN_CLIENT_ID=zombie-admin-ui-client
ZOMBIE_ADMIN_CLIENT_SECRET=your-client-secret-must-be-at-least-32-characters-long
ZOMBIE_ADMIN_REDIRECT_URI=http://localhost:8080/callback
ZOMBIE_ADMIN_POST_LOGOUT_REDIRECT_URI=http://localhost:8080
ZOMBIE_ADMIN_SCOPE=openid profile email roles

# Optional: Cluster Configuration
CLUSTER_NODE_ID=node-1
INSTANCE_ID=instance-1

# Development Mode (enables test endpoints and relaxed security - NEVER use in production)
DEVELOPMENT_MODE=true

# Legacy: Test endpoints (use DEVELOPMENT_MODE instead)
# ENABLE_TEST_ENDPOINTS=true

# Optional: CORS Configuration (for production, specify allowed origins)
# ALLOWED_ORIGINS=https://your-domain.com,https://another-domain.com

# Optional: Rate Limiting (only applied in NODE_ENV=production)
# RATE_LIMIT_WINDOW_MS=900000
# RATE_LIMIT_MAX_REQUESTS=100
# AUTH_RATE_LIMIT_MAX_REQUESTS=5