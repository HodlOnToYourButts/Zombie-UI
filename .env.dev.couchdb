# CouchDB Development Environment
# This service requires CouchDB admin access for monitoring replication

# CouchDB Admin Configuration (required for replication monitoring)
COUCHDB_URL=http://couchdb:5984
COUCHDB_USER=admin
COUCHDB_PASSWORD=admin

# Application Database
COUCHDB_DATABASE=zombie

# Instance Configuration
INSTANCE_ID=docker-instance-1
CLUSTER_NODE_ID=docker-node-1

# Development Mode
DEVELOPMENT_MODE=true